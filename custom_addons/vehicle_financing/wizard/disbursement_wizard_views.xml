<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_leasing_disbursement_wizard_form" model="ir.ui.view">
        <field name="name">leasing.disbursement.wizard.form</field>
        <field name="model">leasing.disbursement.wizard</field>
        <field name="arch" type="xml">
            <form string="Disbursement">
                <group>
                    <group string="Transaction">
                        <field name="contract_id"/>
                        <field name="journal_id"/>
                        <field name="disbursement_date"/>
                    </group>
                    <group string="Gross-Up (Accounting)">
                        <field name="amount_principal"/>
                        <field name="amount_interest"/>
                        <field name="amount_gross" decoration-bf="1"/>
                    </group>
                </group>
                <group>
                    <group string="Deductions (Netting)">
                        <field name="processing_fee"/>
                        <field name="processing_fee_tax"/>
                        <field name="advance_payment"/>
                    </group>
                    <group string="Payout">
                        <field name="amount_net" style="font-size:1.5em;" decoration-success="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_confirm_disbursement" string="Confirm Disbursement" 
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_leasing_disbursement_wizard" model="ir.actions.act_window">
        <field name="name">Disbursement</field>
        <field name="res_model">leasing.disbursement.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>