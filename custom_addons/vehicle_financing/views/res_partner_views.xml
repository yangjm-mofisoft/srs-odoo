<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_leasing" model="ir.ui.view">
        <field name="name">res.partner.form.leasing</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//sheet" position="inside">
                <widget name="web_ribbon" title="Blacklisted" bg_color="bg-danger" invisible="not leasing_blacklist"/>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Leasing Info">
                    <group>
                        <group string="Roles">
                            <field name="is_leasing_guarantor"/>
                            <field name="is_leasing_joint_hirer"/>
                            <field name="is_leasing_broker"/>
                        </group>
                        <group string="Risk Management">
                            <field name="leasing_blacklist" widget="boolean_toggle"/>
                            <field name="leasing_blacklist_reason" invisible="not leasing_blacklist"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>