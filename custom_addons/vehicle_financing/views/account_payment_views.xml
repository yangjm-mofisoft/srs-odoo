<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend the Standard Payment Form to show Contract -->
    <record id="view_account_payment_form_leasing" model="ir.ui.view">
        <field name="name">account.payment.form.leasing</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <!-- Add Leasing Contract field after Partner field -->
            <field name="partner_id" position="after">
                <field name="leasing_contract_id" readonly="state != 'draft'"/>
                <field name="vehicle_reg_no"/>
            </field>
        </field>
    </record>
    
    <!-- Extend the Payment List (Tree) View to show Contract Column -->
    <record id="view_account_payment_list_leasing" model="ir.ui.view">
        <field name="name">account.payment.list.leasing</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="leasing_contract_id" optional="show"/>
                <field name="vehicle_reg_no" optional="hide"/>
            </field>
        </field>
    </record>
</odoo>