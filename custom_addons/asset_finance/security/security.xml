<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Odoo 19: Define Privileges (replaces categories) -->
        <record id="privilege_asset_finance" model="res.groups.privilege">
            <field name="name">Asset Finance</field>
            <field name="sequence">3</field>
        </record>

        <!-- User Groups -->
        <record id="group_finance_officer" model="res.groups">
            <field name="name">Finance Officer</field>
            <field name="privilege_id" ref="privilege_asset_finance"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('account.group_account_invoice'))]"/>
            <field name="comment">Can create and manage contracts. Has Billing access.</field>
        </record>

        <record id="group_finance_manager" model="res.groups">
            <field name="name">Finance Manager</field>
            <field name="privilege_id" ref="privilege_asset_finance"/>
            <field name="implied_ids" eval="[(4, ref('group_finance_officer')), (4, ref('account.group_account_manager'))]"/>
            <field name="comment">Full access - can approve contracts, disburse (Journal Entries), and manage Accounting.</field>
        </record>

        <record id="group_collection_staff" model="res.groups">
            <field name="name">Collection Staff</field>
            <field name="privilege_id" ref="privilege_asset_finance"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Can view active contracts and send notices.</field>
        </record>

        <!-- Record Rules -->

        <record id="finance_contract_multi_company_rule" model="ir.rule">
            <field name="name">Finance Contract: Multi-Company</field>
            <field name="model_id" ref="model_finance_contract"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Finance Officers: Can see all contracts but limited actions -->
        <record id="finance_contract_officer_rule" model="ir.rule">
            <field name="name">Finance Contract: Officer Access</field>
            <field name="model_id" ref="model_finance_contract"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_finance_officer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/> 
        </record>    

        <!-- Collection Staff: Can only see active and repo contracts -->
        <record id="finance_contract_collection_rule" model="ir.rule">
            <field name="name">Finance Contract: Collection Access</field>
            <field name="model_id" ref="model_finance_contract"/>
            <field name="domain_force">[('ac_status', 'in', ['active', 'repo'])]</field>
            <field name="groups" eval="[(4, ref('group_collection_staff'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>
