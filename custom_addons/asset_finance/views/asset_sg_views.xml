<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_finance_asset_form_sg_v2" model="ir.ui.view" forcecreate="True">
        <field name="name">finance.asset.form.sg.v2</field>
        <field name="model">finance.asset</field>
        <field name="inherit_id" ref="asset_finance.view_finance_asset_form"/>
        <field name="arch" type="xml">

            <!-- Add Singapore-specific fields to Additional Info section -->
            <xpath expr="//field[@name='no_of_transfers']" position="after">
                <field name="opc" widget="radio" options="{'horizontal': true}"/>
                <field name="phv" widget="radio" options="{'horizontal': true}"/>
                <field name="omv_check" widget="radio" options="{'horizontal': true}"/>
            </xpath>

            <!-- Add Financial section after Description field -->
            <xpath expr="//field[@name='description']" position="after">
                <!-- Close the Description group and add Financial section -->
            </xpath>

            <xpath expr="//field[@name='description']/.." position="after">
                <group string="Financial">
                    <group string="COE">
                        <field name="coe_no"/>
                        <field name="coe_category"/>
                        <field name="coe_amount" widget="monetary"/>
                    </group>
                    <group string="Tax &amp; Value">
                        <field name="arf_amount" widget="monetary"/>
                        <field name="parf_amount" widget="monetary"/>
                        <field name="parf_expire_date"/>
                        <field name="market_valuation" widget="monetary" class="oe_subtotal_footer_separator"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                </group>
            </xpath>

        </field>
    </record>
</odoo>