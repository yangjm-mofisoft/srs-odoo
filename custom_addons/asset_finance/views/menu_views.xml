<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <menuitem id="menu_finance_root"
              name="Asset Finance"
              sequence="10"
              web_icon="base,static/description/icon.png"
              groups="asset_finance.group_finance_officer,asset_finance.group_finance_manager,asset_finance.group_collection_staff"/>

    <menuitem id="menu_finance_dashboard" name="Dashboard" parent="menu_finance_root"
              action="action_finance_dashboard" sequence="0"/>

    <menuitem id="menu_finance_operations" name="Operations" parent="menu_finance_root" sequence="10"/>

    <menuitem id="menu_finance_contract" name="Contracts" parent="menu_finance_operations" 
              action="action_finance_contract" sequence="1"/>

    <record id="action_finance_receipt_voucher" model="ir.actions.act_window">
        <field name="name">Receipt Vouchers</field>
        <field name="res_model">account.payment</field>
        <field name="view_mode">list,kanban,form,graph</field>
        <field name="domain">[('payment_type', '=', 'inbound')]</field>
        <field name="context">{'default_payment_type': 'inbound', 'default_partner_type': 'customer'}</field>
    </record>

    <record id="action_finance_payment_voucher" model="ir.actions.act_window">
        <field name="name">Payment Vouchers</field>
        <field name="res_model">account.payment</field>
        <field name="view_mode">list,kanban,form,graph</field>
        <field name="domain">[('payment_type', '=', 'outbound')]</field>
        <field name="context">{'default_payment_type': 'outbound', 'default_partner_type': 'supplier'}</field>
    </record>

    <menuitem id="menu_finance_receipts" name="Receipts" parent="menu_finance_operations" 
              action="action_finance_receipt_voucher" sequence="10"/>

    <menuitem id="menu_finance_payments" name="Payments" parent="menu_finance_operations" 
              action="action_finance_payment_voucher" sequence="20"/>


    <menuitem id="menu_finance_master" name="Master Data" parent="menu_finance_root" sequence="30"/>

    <menuitem id="menu_finance_assets" name="Assets" parent="menu_finance_master"
              action="action_finance_asset" sequence="10"/>

    <menuitem id="menu_finance_products" name="Financial Products"
              parent="menu_finance_master" action="action_finance_product" sequence="20"/>


    <menuitem id="menu_finance_accounting" name="Accounting" parent="menu_finance_root" sequence="40" groups="account.group_account_user"/>
    
    <menuitem id="menu_finance_journal_entries" name="Journal Entries" parent="menu_finance_accounting" 
              action="account.action_move_journal_line" sequence="1"/>
              
    <menuitem id="menu_finance_journal_items" name="Journal Items" parent="menu_finance_accounting" 
              action="account.action_account_moves_all" sequence="2"/>


    <menuitem id="menu_finance_config" name="Configuration" parent="menu_finance_root" sequence="99"/>

    <menuitem id="menu_finance_coa" name="Chart of Accounts" parent="menu_finance_config" 
              action="account.action_account_form" sequence="10" groups="account.group_account_manager"/>
              
    <menuitem id="menu_finance_taxes" name="Taxes" parent="menu_finance_config" 
              action="account.action_tax_form" sequence="20" groups="account.group_account_manager"/>

    <menuitem id="menu_finance_penalty_rules"
              name="Penalty Rules"
              parent="menu_finance_config"
              action="action_asset_finance_penalty_rule"
              sequence="30"/>

    <!-- Users Management Menu -->
    <menuitem id="menu_finance_users"
              name="Users"
              parent="menu_finance_config"
              action="base.action_res_users"
              sequence="90"
              groups="base.group_system"/>

</odoo>