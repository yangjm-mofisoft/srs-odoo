<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_asset_finance" model="ir.ui.view">
        <field name="name">res.partner.form.finance</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//sheet" position="inside">
                <widget name="web_ribbon" title="Blacklisted" bg_color="bg-danger" invisible="not finance_blacklist"/>
            </xpath>

            <field name="vat" position="after">
                <field name="nric"/>
                <field name="date_of_birth"/>
                <field name="finance_partner_type"
                       widget="badge"
                       decoration-success="finance_partner_type == 'broker'"
                       decoration-warning="finance_partner_type == 'insurer'"
                       decoration-primary="finance_partner_type == 'finance_company'"
                       decoration-muted="finance_partner_type == 'supplier'"/>
            </field>

            <xpath expr="//field[@name='child_ids']/form//field[@name='type']" position="after">
                <field name="address_category" placeholder="e.g. Residential, Work..."/>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Contact Numbers" name="contact_numbers">
                    <field name="phone_ids" nolabel="1">
                        <list editable="bottom">
                            <field name="contact_type"/>
                            <field name="name" string="Number"/>
                            <field name="address_id" options="{'no_create': True}"/>
                            <field name="is_verified" widget="boolean_toggle"/>
                        </list>
                    </field>
                </page>

                <page string="Finance Info">
                    <group>
                        <group string="Partner Type">
                            <field name="finance_partner_type" widget="radio"/>
                            <separator string="Deprecated Fields (For Migration)" colspan="2"/>
                            <field name="is_finance_guarantor" readonly="1" invisible="1"/>
                            <field name="is_finance_joint_hirer" readonly="1" invisible="1"/>
                            <field name="is_finance_broker" readonly="1" invisible="1"/>
                        </group>
                        <group string="Risk Management">
                            <field name="finance_blacklist" widget="boolean_toggle"/>
                            <field name="finance_blacklist_reason" invisible="not finance_blacklist"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>