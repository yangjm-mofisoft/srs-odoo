<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_asset_finance" model="ir.ui.view">
        <field name="name">res.partner.form.finance</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//sheet" position="inside">
                <widget name="web_ribbon" title="Blacklisted" bg_color="bg-danger" invisible="not finance_blacklist"/>
            </xpath>

            <!-- Add NRIC after Name or similar suitable place -->
            <field name="vat" position="after">
                <field name="nric"/>
                <field name="date_of_birth"/>
            </field>

            <xpath expr="//notebook" position="inside">
                <page string="Finance Info">
                    <group>
                        <group string="Roles">
                            <field name="is_finance_guarantor"/>
                            <field name="is_finance_joint_hirer"/>
                            <field name="is_finance_broker"/>
                        </group>
                        <group string="Risk Management">
                            <field name="finance_blacklist" widget="boolean_toggle"/>
                            <field name="finance_blacklist_reason" invisible="not finance_blacklist"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>