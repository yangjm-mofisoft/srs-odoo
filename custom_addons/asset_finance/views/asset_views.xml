<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_finance_asset_search" model="ir.ui.view">
        <field name="name">finance.asset.search</field>
        <field name="model">finance.asset</field>
        <field name="arch" type="xml">
            <search string="Search Vehicles">
                <field name="name"/>
                <field name="registration_no"/>
                <field name="chassis_no"/>
                <field name="vehicle_make_id"/>
                <field name="vehicle_model_id"/>
                <field name="status"/>
                <filter string="Available" name="available" domain="[('status', '=', 'available')]"/>
                <filter string="Financed" name="financed" domain="[('status', '=', 'financed')]"/>
                <separator/>
                <filter string="Make" name="group_make" context="{'group_by': 'vehicle_make_id'}"/>
                <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
            </search>
        </field>
    </record>

    <record id="view_finance_asset_form" model="ir.ui.view">
        <field name="name">finance.asset.form</field>
        <field name="model">finance.asset</field>
        <field name="arch" type="xml">
            <form string="Asset">
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="available,financed,repo,sold"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="e.g. Toyota Camry 2023"/></h1>
                        <h3>
                            <field name="registration_no" placeholder="Registration No / License Plate"/>
                        </h3>
                    </div>

                    <group>
                        <group string="Vehicle Identification">
                            <field name="asset_type"/>
                            <field name="internal_ref"/>
                            <field name="chassis_no" placeholder="VIN / Chassis Number"/>
                            <field name="vehicle_make_id" options="{'no_open': True}"/>
                            <field name="vehicle_model_id" options="{'no_open': True}"/>
                        </group>
                        <group string="Vehicle Specifications">
                            <field name="vehicle_type"/>
                            <field name="year_manufacture"/>
                            <field name="vehicle_color"/>
                            <field name="vehicle_condition"/>
                            <field name="engine_no"/>
                            <field name="engine_capacity"/>
                        </group>
                    </group>

                    <group string="Description &amp; Notes" col="1">
                        <field name="description" nolabel="1" placeholder="Add detailed notes, accessories, special features, or condition details here..."/>
                    </group>

                    <group>
                        <group string="Additional Info">
                            <field name="no_of_transfers"/>
                            <field name="vehicle_id" readonly="1" invisible="1"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_finance_asset_list" model="ir.ui.view">
        <field name="name">finance.asset.list</field>
        <field name="model">finance.asset</field>
        <field name="arch" type="xml">
            <list string="Vehicles">
                <field name="internal_ref" optional="hide"/>
                <field name="registration_no"/>
                <field name="name"/>
                <field name="vehicle_make_id" optional="show"/>
                <field name="vehicle_model_id" optional="show"/>
                <field name="year_manufacture" optional="hide"/>
                <field name="vehicle_condition" optional="hide"/>
                <field name="status" widget="badge"
                       decoration-success="status == 'available'"
                       decoration-info="status == 'financed'"/>
            </list>
        </field>
    </record>

    <record id="action_finance_asset" model="ir.actions.act_window">
        <field name="name">Assets</field>
        <field name="res_model">finance.asset</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_finance_asset_search"/>
    </record>

</odoo>