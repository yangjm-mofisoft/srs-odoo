<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_asset_finance_product_form" model="ir.ui.view">
        <field name="name">finance.product.form</field>
        <field name="model">finance.product</field>
        <field name="arch" type="xml">
            <form string="Financial Product">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group string="Configuration">
                            <field name="product_type"/>
                            <field name="active"/>
                            <field name="default_penalty_rule_id"/>
                        </group>
                        <group string="Validity">
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <group string="Finance Terms">
                            <field name="default_int_rate"/>
                            <field name="min_finance_amount"/>
                            <field name="max_finance_amount"/>
                            <field name="min_finance_percent"/>
                            <field name="max_finance_percent"/>
                        </group>
                        <group string="Loan Term Rules">
                            <field name="min_months"/>
                            <field name="max_months"/>
                            <field name="step_months"/>
                        </group>
                        <!-- Show Leasing fields only if Type is Leasing -->
                        <group string="Leasing Defaults" invisible="product_type != 'lease'">
                            <field name="default_rv_percentage"/>
                            <field name="annual_mileage_limit"/>
                            <field name="excess_mileage_charge"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_asset_finance_product_list" model="ir.ui.view">
        <field name="name">finance.product.list</field>
        <field name="model">finance.product</field>
        <field name="arch" type="xml">
            <list string="Financial Products">
                <field name="name"/>
                <field name="product_type"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="default_int_rate"/>
                <field name="max_finance_percent" optional="hide"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="action_finance_product" model="ir.actions.act_window">
        <field name="name">Financial Products</field>
        <field name="res_model">finance.product</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>