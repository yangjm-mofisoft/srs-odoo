<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- BANK & CASH (2000 Series) -->
        <record id="account_mbb_bank" model="account.account">
            <field name="code">2001</field>
            <field name="name">Mbb bank</field>
            <field name="account_type">asset_cash</field>
            <field name="reconcile" eval="True"/>
        </record>

        <!-- CURRENT ASSETS / HP DEBTORS -->
        <record id="account_hp_debtors_principal" model="account.account">
            <field name="code">2002</field>
            <field name="name">Hire Purchase Debtors - Principal + Interest</field>
            <field name="account_type">asset_receivable</field>
            <field name="reconcile" eval="True"/>
        </record>

        <record id="account_hp_debtors_unearned" model="account.account">
            <field name="code">2003</field>
            <field name="name">Hire Purchase Debtors - Unearned Interest</field>
            <field name="account_type">asset_current</field>
        </record>

        <record id="account_hp_debtors_charges" model="account.account">
            <field name="code">2004</field>
            <field name="name">Hire Purchase Debtors - Others Charges</field>
            <field name="account_type">asset_receivable</field>
            <field name="reconcile" eval="True"/>
        </record>

        <record id="account_hp_debtors_contra" model="account.account">
            <field name="code">2005</field>
            <field name="name">Hire Purchase Debtors -Installment Contra</field>
            <field name="account_type">asset_current</field>
        </record>

        <!-- EQUITY (3000 Series) -->
        <record id="account_retained_earnings" model="account.account">
            <field name="code">3001</field>
            <field name="name">Retained Earnings</field>
            <field name="account_type">equity</field>
        </record>

        <!-- CURRENT LIABILITY (4000 Series) -->
        <record id="account_block_creditors_principal" model="account.account">
            <field name="code">4001</field>
            <field name="name">Block Discounting Creditors- Principal + Interest</field>
            <field name="account_type">liability_payable</field>
            <field name="reconcile" eval="True"/>
        </record>

        <record id="account_block_creditors_unearned" model="account.account">
            <field name="code">4002</field>
            <field name="name">Block Discounting Creditors- Unearned Interest</field>
            <field name="account_type">liability_current</field>
        </record>

        <record id="account_trade_creditors" model="account.account">
            <field name="code">4003</field>
            <field name="name">Trade Creditors</field>
            <field name="account_type">liability_payable</field>
            <field name="reconcile" eval="True"/>
        </record>

        <!-- REVENUE (5000 Series) -->
        <record id="account_hp_interest_income" model="account.account">
            <field name="code">5001</field>
            <field name="name">Hire Purchase Interest Income</field>
            <field name="account_type">income</field>
        </record>

        <record id="account_hp_processing_fee" model="account.account">
            <field name="code">5002</field>
            <field name="name">Hire Purchase Processing Fee</field>
            <field name="account_type">income</field>
        </record>

        <record id="account_hp_late_charges" model="account.account">
            <field name="code">5003</field>
            <field name="name">Hire Purchase Late Charges &amp; Interest</field>
            <field name="account_type">income</field>
        </record>

        <record id="account_hp_early_settlement" model="account.account">
            <field name="code">5004</field>
            <field name="name">Hire Purchase Early Settlement Fee</field>
            <field name="account_type">income</field>
        </record>

        <!-- COST OF REVENUE (6000 Series) -->
        <record id="account_block_interest_expense" model="account.account">
            <field name="code">6001</field>
            <field name="name">Block Discounting Interest Expenses</field>
            <field name="account_type">expense_direct_cost</field>
        </record>

        <record id="account_block_processing_fee" model="account.account">
            <field name="code">6002</field>
            <field name="name">Block Discounting Processing Fee</field>
            <field name="account_type">expense_direct_cost</field>
        </record>

        <record id="account_hp_repo_expense" model="account.account">
            <field name="code">6003</field>
            <field name="name">Hp - Repo Expenses</field>
            <field name="account_type">expense_direct_cost</field>
        </record>

        <!-- NOTE: GST Output is technically a Liability, mapped here to ensure correct reporting -->
        <record id="account_gst_output" model="account.account">
            <field name="code">6004</field>
            <field name="name">Gst Output tax</field>
            <field name="account_type">liability_current</field>
        </record>

        <!-- OTHER INCOME (7000 Series) -->
        <record id="account_management_income" model="account.account">
            <field name="code">7001</field>
            <field name="name">Management Income</field>
            <field name="account_type">income_other</field>
        </record>

        <!-- EXPENDITURES (8000 Series) -->
        <record id="account_bank_charges" model="account.account">
            <field name="code">8001</field>
            <field name="name">Bank Charges</field>
            <field name="account_type">expense</field>
        </record>

        <!-- Journals -->
        <record id="journal_mbb_bank" model="account.journal">
            <field name="name">MBB Bank</field>
            <field name="type">bank</field>
            <field name="code">MBB</field> <field name="currency_id" eval="ref('base.MYR')"/> <field name="default_account_id" ref="account_mbb_bank"/> 
        </record>

        <record id="journal_petty_cash" model="account.journal">
            <field name="name">Petty Cash</field>
            <field name="type">cash</field>
            <field name="code">CSH</field>
            </record>

    </data>
</odoo>