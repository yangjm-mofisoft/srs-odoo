<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Set supported asset types (comma-separated) -->
        <record id="supported_asset_types_config" model="ir.config_parameter">
            <field name="key">asset_finance.supported_asset_types</field>
            <field name="value">vehicle</field>
        </record>

        <!-- Set default asset type -->
        <record id="default_asset_type_config" model="ir.config_parameter">
            <field name="key">asset_finance.default_asset_type</field>
            <field name="value">vehicle</field>
        </record>
    </data>
</odoo>
