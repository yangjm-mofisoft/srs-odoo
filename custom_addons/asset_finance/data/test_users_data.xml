<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
            Test Users for Asset Finance Module

            IMPORTANT: These users are for TESTING/DEVELOPMENT only!
            DO NOT install this file in production environments.

            To use these test users:
            1. Add 'data/test_users_data.xml' to __manifest__.py 'data' section
            2. Upgrade the module
            3. Login with any of the test users below

            Default password for all test users: test123
        -->

        <!-- =====================================================
             TEST USER 1: Finance Manager
             ===================================================== -->
        <record id="test_user_finance_manager" model="res.users">
            <field name="name">Test Finance Manager</field>
            <field name="login">finance.manager</field>
            <field name="password">test123</field>
            <field name="email">finance.manager@test.com</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="company_ids" eval="[(4, ref('base.main_company'))]"/>
        </record>

        <!-- Assign Finance Manager group -->
        <function model="res.users" name="write">
            <value eval="[ref('test_user_finance_manager')]"/>
            <value eval="{'group_ids': [(4, ref('asset_finance.group_finance_manager'))]}"/>
        </function>


        <!-- =====================================================
             TEST USER 2: Finance Officer
             ===================================================== -->
        <record id="test_user_finance_officer" model="res.users">
            <field name="name">Test Finance Officer</field>
            <field name="login">finance.officer</field>
            <field name="password">test123</field>
            <field name="email">finance.officer@test.com</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="company_ids" eval="[(4, ref('base.main_company'))]"/>
        </record>

        <!-- Assign Finance Officer group -->
        <function model="res.users" name="write">
            <value eval="[ref('test_user_finance_officer')]"/>
            <value eval="{'group_ids': [(4, ref('asset_finance.group_finance_officer'))]}"/>
        </function>


        <!-- =====================================================
             TEST USER 3: Collection Staff
             ===================================================== -->
        <record id="test_user_collection_staff" model="res.users">
            <field name="name">Test Collection Staff</field>
            <field name="login">collection.staff</field>
            <field name="password">test123</field>
            <field name="email">collection.staff@test.com</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="company_ids" eval="[(4, ref('base.main_company'))]"/>
        </record>

        <!-- Assign Collection Staff group -->
        <function model="res.users" name="write">
            <value eval="[ref('test_user_collection_staff')]"/>
            <value eval="{'group_ids': [(4, ref('asset_finance.group_collection_staff'))]}"/>
        </function>


        <!-- =====================================================
             TEST USER 4: All Roles (Super User for Testing)
             ===================================================== -->
        <record id="test_user_all_roles" model="res.users">
            <field name="name">Test All Roles</field>
            <field name="login">finance.all</field>
            <field name="password">test123</field>
            <field name="email">finance.all@test.com</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="company_ids" eval="[(4, ref('base.main_company'))]"/>
        </record>

        <!-- Assign all groups to All Roles user -->
        <function model="res.users" name="write">
            <value eval="[ref('test_user_all_roles')]"/>
            <value eval="{'group_ids': [
                (4, ref('asset_finance.group_finance_manager')),
                (4, ref('asset_finance.group_finance_officer')),
                (4, ref('asset_finance.group_collection_staff'))
            ]}"/>
        </function>

    </data>
</odoo>
